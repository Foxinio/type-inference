%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Inference rules macros

\newcommand\typing[4]{#1;#2\vdash #3 : #4}
\newcommand\infertype[5]{#1;#2\vdash #3 \Uparrow #4 / #5}
\newcommand\checktype[5]{#1;#2\vdash #3 \Downarrow #4 / #5}
\newcommand\unify[3]{#1 \stackrel{?}{=} #2 / #3}
\newcommand\subtype[2]{#1 \sqsubseteq #2}

\newcommand\subst[2]{\{#2/#1\}}

