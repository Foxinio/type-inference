% Lambda calculus macros

\newcommand\defcategory[4]{%
\mathsf{#1} & \ni #2 && \Coloneqq #3 \tag{#4}}

\newcommand\varx{x}
\newcommand\vary{y}
\newcommand\varz{z}
\newcommand\tvara{\alpha}
\newcommand\tvarb{\beta}
\newcommand\uvarx{?\! X}
\newcommand\uvary{?\! Y}
\newcommand\uvarz{?\! Z}
\newcommand\expr{e}
\newcommand\synval{v}
\newcommand\type{\tau}
\newcommand\scheme{\sigma}
\newcommand\ctor{\texttt{ctor}}

\newcommand\code[1]{\texttt{#1}}

\newcommand\env{\Gamma}
\newcommand\tenv{\Delta}
\newcommand\extendEnv[2]{#1,#2}

